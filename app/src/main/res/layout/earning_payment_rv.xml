<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rad_8back"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID #5628"
        android:fontFamily="@font/duplet_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/paymentOrderId"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/info"
        android:layout_alignParentEnd="true"
        android:id="@+id/info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 160.00"
        android:layout_toStartOf="@+id/info"
        android:fontFamily="@font/duplet_bold"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#2b2b2b"
        android:textSize="16sp"
        android:id="@+id/orderTotal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/orderTotal"
        android:text="Total:"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/duplet_semibold"
        android:textColor="#2b2b2b"
        android:textSize="14sp"/>







</RelativeLayout>