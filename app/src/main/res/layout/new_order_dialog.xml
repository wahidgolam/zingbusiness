<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43B985">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

   <RelativeLayout
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:background="@drawable/new_order_biggercircle"
       android:id="@+id/new_orders_view">

       <RelativeLayout
           android:layout_width="110dp"
           android:layout_height="110dp"
           android:background="@drawable/new_order_smallercircle"
           android:layout_centerInParent="true">


           <TextView
               android:id="@+id/no_of_orders"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:fontFamily="@font/duplet_semibold"
               android:text="5"
               android:textColor="@color/white"
               android:textSize="60dp" />

       </RelativeLayout>

   </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Order"
        android:layout_below="@+id/new_orders_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/duplet_regular"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:id="@+id/textView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:text="Accept or Decline your order"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/duplet_regular"
        android:id="@+id/textView2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rad_8back"
        android:layout_below="@id/textView2"
        android:layout_marginTop="30dp"
        android:paddingVertical="15dp"
        android:layout_marginHorizontal="24dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #563F"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/duplet_bold"
            android:id="@+id/orderId"
            android:layout_marginHorizontal="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderId"
            android:text="from Himanshu"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/duplet_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/userName"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Today at 08:00 PM"
            android:fontFamily="@font/duplet_regular"
            android:textSize="14sp"
            android:textColor="#2b2b2b"
            android:id="@+id/orderTime"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/help"
            android:fontFamily="@font/duplet_bold"
            android:textSize="18sp"
            android:textColor="#F5765B"
            android:id="@+id/help"
            android:layout_below="@+id/orderTime"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_marginTop="20dp"
            android:id="@+id/orderRV1"
            android:layout_marginHorizontal="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black"
            android:layout_below="@id/orderRV1"
            android:id="@+id/divider1"
            android:orientation="horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@+id/divider1"
            android:id="@+id/orderValueTotalView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/duplet_semibold"
                android:textSize="20sp"
                android:text="Total"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/duplet_semibold"
                android:textSize="20sp"
                android:text="â‚¹ 120.00"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/orderTotal"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/black"
            android:layout_below="@id/orderValueTotalView"
            android:id="@+id/divider2"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:background="@drawable/rad12_orangeborder"
            android:id="@+id/zing_time_view"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="-"
                android:background="@drawable/rad12_orangeback"
                android:paddingVertical="10dp"
                android:paddingHorizontal="18dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/substractTime"
                android:fontFamily="@font/duplet_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="+"
                android:fontFamily="@font/duplet_bold"
                android:background="@drawable/rad12_orangeback"
                android:paddingVertical="10dp"
                android:paddingHorizontal="18dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/addTime"/>

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/duplet_bold"
                android:text="15 mins"
                android:textColor="@color/dark_orange"
                android:textSize="18sp" />





        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rad12_redstrokes"
            android:layout_below="@+id/zing_time_view"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:paddingHorizontal="32dp"
                android:paddingVertical="11dp"
                android:id="@+id/rejectOrder"
                android:textColor="#ED2E3F"
                android:fontFamily="@font/duplet_semibold"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rad12_greenback"
            android:layout_below="@+id/zing_time_view"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:paddingHorizontal="32dp"
                android:paddingVertical="11dp"
                android:id="@+id/acceptOrder"
                android:textColor="@color/white"
                android:fontFamily="@font/duplet_semibold"
                android:textSize="18sp"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>









</RelativeLayout>