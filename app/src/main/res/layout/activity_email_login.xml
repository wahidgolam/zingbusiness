<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailLogin"
    android:background="#FFF4EA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF4EA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zing."
            android:textSize="60sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/clashdisplay_semibold"
            android:textColor="#F5765B"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Partner"
            android:textAlignment="center"
            android:fontFamily="@font/duplet_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/login_illustration"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Email"
            android:layout_marginTop="-25dp"
            android:layout_marginHorizontal="28dp"
            android:fontFamily="@font/duplet_semibold"
            android:textSize="16sp"
            android:textColor="@color/dark_orange"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:hint="Email"
            android:id="@+id/email"
            android:fontFamily="@font/duplet_bold"
            android:textColor="#F5765B"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Password"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="28dp"
            android:fontFamily="@font/duplet_semibold"
            android:textSize="16sp"
            android:textColor="@color/dark_orange"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:hint="Password"
            android:id="@+id/password"
            android:fontFamily="@font/duplet_bold"
            android:textColor="#F5765B"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/rad12_orangeback"
            android:text="Login"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:textSize="18dp"
            android:fontFamily="@font/duplet_semibold"
            android:layout_marginTop="20dp"/>








    </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>